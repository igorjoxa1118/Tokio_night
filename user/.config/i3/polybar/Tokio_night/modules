[module/i3]
type = internal/i3

pin-workspaces = true

ws-icon-0 = 1;ÔÑ†  Terminal
ws-icon-1 = 2;Ôâ©  Firefox
ws-icon-2 = 3;Ô¨•  Code
ws-icon-3 = 4;ÔÑî  File
ws-icon-4 = 5;Ôñ™  Blend 
ws-icon-5 = 6;Ôáò  Telegram 
ws-icon-6 = 7;ÔÖ™  Video
ws-icon-7 = 8;ÔÄ∞  Pictures
ws-icon-8 = 9;ÔÜ≤  Virtual
ws-icon-9 = 10;Ô°∏  Other
ws-icon-default = Ôñ™

; Available tags:
;   <label-state> (default) - gets replaced with <label-(focused|unfocused|visible|urgent)>
;   <label-mode> (default)
format = <label-state><label-mode>

label-mode = %mode%
label-mode-background = ${color.background}
label-mode-foreground = ${color.foreground}
label-mode-padding = 1
label-mode-font = 0

label-focused = %icon%
label-focused-foreground = ${color.foreground_orange}
label-focused-background = ${color.background}
label-focused-underline =  ${color.foreground_blue}
label-focused-padding = 1
label-focused-font = 0

label-unfocused = %icon%
label-unfocused-background = ${color.background}
label-unfocused-foreground = ${color.foreground_blue}
label-unfocused-padding = 1
label-unfocused-font = 0

label-visible = %icon%
label-visible-underline = ${color.purple}
label-visible-foreground = ${color.purple}
label-visible-background = ${color.background}
label-visible-padding = 1
label-visible-font = 0

label-urgent = %icon%
label-urgent-foreground = ${color.red}
label-urgent-background = ${color.background}
label-urgent-padding = 1
label-urgent-font = 0

