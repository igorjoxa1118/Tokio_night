[module/date]
type = internal/date
interval = 1

; Change it for yourself
; https://en.cppreference.com/w/cpp/io/manip/put_time

date = %d-%m-%y
time = %H:%M
date-alt = %A %d %B %Y
time-alt = %H:%M:%S

format = <label>
format-prefix = "Ó§π "
format-prefix-foreground = ${color.foreground_orange}
format-background = ${color.background}

label = %date% %time%
label-foreground = ${color.foreground_blue}

